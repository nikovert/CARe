{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Train Double Integrator",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/examples/main.py",
            "args": [
                "--example", "double_integrator",
                "--run_mode", "train",
                "--logging_root", "./logs",
                "--batch_size", "32",
                "--lr", "2e-5",
                "--num_epochs", "30000",
                "--model_type", "sine",
                "--model_mode", "mlp"
            ],
            "console": "integratedTerminal",
            "justMyCode": true,
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
